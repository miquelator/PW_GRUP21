{% extends "base.twig" %}
{% block title %}Hello!{% endblock %}
{% block head %}
    {{ parent() }}

{% endblock %}
{% block content %}
    <a href="/home_log" id="patras" class="btn btn-success">Enrere</a>

    <h1>{{ name }}!</h1>
    <img src="/../../assets/Pictures/{{image}}">
    <h2>Fotografies penjades:</h2>
    <div class="row">
        {% for img in fotos %}
            <div class="col-md-4 col-sm-6 col-xs-6 thumbnail">
                <img src="/../../assets/Pictures/No_Perfil/{{img.img_path}} "
                     class="img-responsive">
                <h4 ><a href="/bigPhoto/{{ img.img_path}}/{{img.title }}/{{ img.created_at }}/{{ img.likes }}/{{ img.visits }}/{{ img.user_nom }}/{{ img.id }}">{{ img.title }}</a></h4>
            </div>

        {% endfor %}
    </div>
{% endblock %}