{% extends "base.twig" %}
{% block title %}Login{% endblock %}
{% block content %}
    <h1>Login</h1>
    <form action="/users/add" METHOD="POST">
        <label for="name">Nom o Mail:</label><input type="text" name="name">
        {% if errors.name is defined %}
            <p>{{ errors.name }}</p>
        {% endif %}
        <label for="password">Contrassenya:</label><input type="email" name="email">
        {% if errors.password is defined %}
            <p>{{ errors.password }}</p>
        {% endif %}
        <input type="submit" value="Send">
        {% if errors.unexpected is defined %}
            <p>{{ errors.unexpected }}</p>
        {% endif %}
    </form>
{% endblock %}